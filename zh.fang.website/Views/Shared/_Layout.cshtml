<!DOCTYPE html>
@{ 
    ViewBag.Title = "";
    ViewBag.Copyright = "崇仁县公安局";
}

<html style="overflow-y:auto;">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Scripts/easyui/themes/default/easyui.css")" />
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Scripts/easyui/themes/icon.css")" />
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Contents/Site.css")" />

    @RenderSection("stysles", false)
</head>
<body class="easyui-layout">
    <div data-options="region:'north'" style="height:106px;" class="x-clear-border">
        <div style="text-align:center;">
            @Html.Partial("_Header")
        </div>
    </div>
    <div data-options="region:'center'" class="x-clear-border">
        @RenderBody()
    </div>
    <div data-options="region:'south'" style="height:86px;" class="x-clear-border easyui-layout">
        <div id="x-footer" style="text-align:center;">
            @Html.Partial($"_Footer")
            <div style="margin-top:10px;">
                <a href="@Url.Action("admin")" target="_blank">[ 后台管理 ]</a>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="@Url.Content("~/Scripts/easyui/jquery.min.js?")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/easyui/jquery.easyui.min.js")"></script>
    @RenderSection("scripts", false)
</body>
</html>
