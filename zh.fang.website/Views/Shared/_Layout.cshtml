<!DOCTYPE html>
@{ 
    ViewBag.Title = "";
    ViewBag.Copyright = "崇仁县公安局";
}

<html style="overflow-y:auto;">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Scripts/easyui/themes/default/easyui.css")" />
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Scripts/easyui/themes/icon.css")" />
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Contents/Site.css")" />

    @RenderSection("stysles", false)
</head>
<body style="background-color:rgba(0, 0, 0, 0.1);">
    <div style="text-align:center;">
        @Html.Partial("_Header")
    </div>
    <div class="x-clear-border">
        @RenderBody()
    </div>
    <div id="x-footer" style="text-align:center; background-color:#2D3E50; min-height:100px; padding:10px; color:rgba(255, 255, 255, 0.5);">
        @Html.Partial($"_Footer")
        <a href="@Url.Action("admin", "Home")" style="color:rgba(255, 255, 255, 0.5); margin-left:25px; font-size:.75em;" target="_blank">@@ 管理</a>
    </div>
    <script type="text/javascript" src="@Url.Content("~/Scripts/easyui/jquery.min.js?")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/easyui/jquery.easyui.min.js")"></script>
    @RenderSection("scripts", false)
</body>
</html>
