            },
            error: function (jqXHR, msg, err) {
                debugger;
            }
        });
    };

    var fmtOper = function (val, row) {
        return '<a href="javascript:void(0)" onclick="editCb(this, \'' + val +'\');return false;" class="easyui-linkbutton" data-options="plain:true">编辑</a>';
